<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
          x:Class="Examen2Progra2.Views.ViewCalcNotaFinde"
          BackgroundColor="#00378F">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Label Text="Ingrese las notas:" FontAttributes="Bold" FontSize="Large" HorizontalOptions="Center" Margin="0,20" TextColor="White"/>
            <Entry Placeholder="Nota 1" Keyboard="Numeric" Margin="0,20" Text="{Binding Nota1}" BackgroundColor="White" TextColor="#333333" />
            <Entry Placeholder="Nota 2" Keyboard="Numeric" Margin="0,10" Text="{Binding Nota2}" BackgroundColor="White" TextColor="#333333" />
            <Entry Placeholder="Nota 3" Keyboard="Numeric" Margin="0,10" Text="{Binding Nota3}" BackgroundColor="White" TextColor="#333333" />
            <Entry Placeholder="Nota 4" Keyboard="Numeric" Margin="0,10" Text="{Binding Nota4}" BackgroundColor="White" TextColor="#333333" />

            <Button Text="Guardar" Command="{Binding GuardarNotasCommand}" HorizontalOptions="Center" Margin="0,30" BackgroundColor="#ECD444" TextColor="White" FontAttributes="Bold" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>